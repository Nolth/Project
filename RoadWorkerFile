public class RoadWorkFile 
{
	public RoadWorkFile()
	{
		readTestResults();
	}
	
	public String readTestResults()
	{
		System.out.println("");
		System.out.println("Read Test Start");
		//Scanner scan = null;
		File inFile = new File("sd_paving_datasd(1).csv");
		System.out.println("Test Infile: " + inFile);
		if (inFile.exists())
		{
			System.out.println("File Exists");
		}
		else
		{
			System.out.println("");
		}
		Scanner scan = null;
		System.out.println("Try");
		try 
		{
			System.out.println("In Try");
			scan = new Scanner(inFile);
		}
		catch (FileNotFoundException e) 
		{
			e.printStackTrace();
		}
		String content = "";
		//Obtain content from the file as long as there is content to be obtained 
		while(scan.hasNext())
		{
			//System.out.println("Test Content1: " + content);
			String line = scan.nextLine();
			//System.out.println("Test Line: " + line);
			content += line;
			content += scan.next();
			//System.out.println("Test Content2: " + content);
		}
		System.out.println("Test Content3: " + content);
		return content;
	}
}
